<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YumSafe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-B7ltx60RTU2TiPuj9v33JZ6P26dfTnoNTcDjOdB1Gaf0eAF6WSLzL20pPVaRgPw8uhB7lq8VSfTCGVEJZyZIvA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/xmlproject.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa; /* Bootstrap background color */
        }

        .navbar {
            background-color: #7be0d8 !important; /* Navbar background color */
        }

        .navbar-brand img {
            max-width: 100px;
            height: auto;
        }

        .navbar-nav .nav-link {
            color: #ecf0f1; /* Text color */
        }

            .navbar-nav .nav-link:hover {
                color: #ffffff; /* Hover color */
            }

        .navbar-toggler-icon {
            color: #ecf0f1; /* Navbar toggler color */
        }

        .phone-icon {
            margin-right: 5px;
        }

        /* Footer Styles */
        .footer {
            background-color: #7be0d8;
            color: #ffffff;
            padding: 20px 0;
        }

            .footer h5 {
                color: #ffffff;
            }

            .footer a {
                color: #ffffff;
            }

                .footer a:hover {
                    color: #eeeeee;
                }

            .footer .list-unstyled {
                margin-bottom: 5px; /* You can adjust the value as needed */
            }

        .footer {
            padding-top: 10px; /* You can adjust the value as needed */
            padding-bottom: 10px; /* You can adjust the value as needed */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <img src="~/Images/logo.png" alt="Logo">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutYumSafe"><strong>About US</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Testimonials"><strong>Testimonials</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ReviewForm"><strong>Review a Restaurant</strong></a>
                        </li>
                        <li class="nav-item ml-auto">
                            <strong>
                                <a href="tel:+123456789" class="nav-link">
                                    <span class="phone-icon">&#x260E;</span> Call Us: +123 456 789
                                </a>
                            </strong>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
