        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        tr:nth-child(even) {
            background-color: white;
        }

        tr:nth-child(odd) {
            background-color: light grey;
        }

        td {
            padding: 10px;
        }

        img {
            border-radius: 50%;
        }

        .testimonial-text {
            font-style: italic;
            font-size: 16px; /* Adjusted font size */
            line-height: 1.4; /* Improved line spacing */
        }

        
    </style>
</head>
